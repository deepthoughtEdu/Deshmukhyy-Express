<%- include("../../header") -%>

    <link rel="stylesheet" href="/stylesheets/app/main.css">
    <div class="d-flex justify-content-center">
        <h5>Create Show</h5>
    </div>
    <div class="d-flex justify-content-center card-container">
        <form class="col-12 col-md-6 justify-content-center form-container" id="create-show-form">
            <div class="mb-3 question">
                <label for="category" class="form-label">
                    ___________________________________
                </label>
                <select class="custom-select" name="____________"> <!-- data value: category-->
                    <option selected>Open this select menu</option>
                    <option value="movies">Movies</option>
                    <option value="tv-show">TV Shows</option>
                    <option value="web-series">Web Series</option>
                </select>
            </div>
            <div class="mb-3 question">
                <label for="moviename" class="form-label">
                    _____________________________________
                </label>
                <input type="text" name="______________" class="form-control" placeholder="Movie Name"> <!-- data value: moviename-->
            </div>

            <div class="mb-3 question">
                <label for="duration" class="form-label">
                  ______________________________________
                </label>
                <input type="number" name="____________" class="form-control" placeholder="Duration"> <!-- data value: duration-->
            </div>
            <div class="mb-3 question">
                <label for="time" class="form-label">
                    _____________________________________
                </label>
                <select class="custom-select" name="_____________"> <!-- data value: time-->
                    <option selected>Open this select menu</option>
                    <% for (var i=7; i<11; i++) { %>
                        <option value="<%= [i+1] %>:00am">
                            <%= [i+1] %>:00am
                        </option>
                        <% } %>
                            <% for (var i=1; i<12; i++) { %>
                                <option value="<%= [i+1] %>:00pm">
                                    <%= [i+1] %>:00pm
                                </option>
                                <% } %>
                </select>
            </div>
            <div class="mb-3 question">
                <label for="fare" class="form-label">
                    _________________________________________________
                </label>
                <input type="number" name="_______________" class="form-control" placeholder="Enter Amount"> <!-- data value: fare-->
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">
                    ______________
                </button>
            </div>
        </form>
    </div>
    </div>
    <script src="/javascript/app/organizer/create.js"></script>

    <%- include("../../footer") -%>